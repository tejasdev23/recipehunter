<h1>Recipes#index</h1>
<p>Find me in app/views/recipes/index.html.erb</p>



<table border=1>
<thead>
    <tr>
    <th>Image</th>
        <th>Title</th>                      
        <th>Social Rank</th>
    </tr>
    </thead>
    <tbody>
        <% @recipes.each do |recipe| %>
        <tr>
            <% @hello=sanitize recipe["title"] %>
            <td id="imgthug"><%=link_to image_tag(recipe["image_url"],width:100,height:100),recipe["source_url"]%></td>
            <td >      <%=link_to @hello,recipe["source_url"]%></td>
              <td><%=recipe["social_rank"]%></td>
        </tr>
        
        <% end %>
    
    </tbody>
    
    
</table>